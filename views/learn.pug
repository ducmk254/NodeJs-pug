- var a = 1000
- var isAdmin = true

doctype html
head
  title Learn Pug
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
body
    h1 Wellcome to Minh Đức blog !!!!
    if (isAdmin)
        a(href="admin") Admin Page
    else
        a(href="/") Quay lại
    ul(style="list-style:none") Danh sách users:
        - for(var i = 0; i <=3; i++)
            li= i
    ul(style="list-style:none; font-weight:bold;color: red; background-color: #ccc") Danh sách username:
        each user in arrUsers
            li= user.username

    h2 Danh sách CBCNV:
    each cbnv in arrCBNV 
        span= 'Tên: ' + cbnv.name + ' - '
        span=  'Tuổi: ' +cbnv.age
        br


script(src='/reload/reload.js')